{% extends "base.html.twig" %}


{% block title %} SocialReaders |{% if app.user %} {{app.user.nome}} {%endif%} {% endblock %}
{% block body %}

<main class="principal-profile">

    <div class="content-profile ">

        <h1 class="text-center mb-3 mt-5">Meu Perfil</h1>


        {% if app.user %}

        <div class="text-center">
        {% if app.user.imageprofile%}
            <img class="img-fluid user-profile-picture" src="uploads/imagesprofile/{{app.user.imageprofile}}" alt="">
        {% else %}
        <img class="img-fluid user-profile-picture" src="assets/images/noneuser.png" alt="">
        {%endif%}
            <h2>{{app.user.nome}}</h2>
            <span class="text-center">{{app.user.email}}</span>
        </div>

        <div class="d-flex info mt-3">


            <div title="Posts" class="card card-book p-2 ">


                <i class="fa-brands fa-readme mb-2"></i>

                <p>{{myposts | length}}</p>



            </div>

            <div title="Livros" class="card card-book p-2">
                <i class="fa-solid fa-book mb-2"></i>
                <p>100</p>
            </div>

            <a title="Amigos" class="text-decoration-none" href="{{path('app_amigos')}}">
            <div class="card card-book p-2">
                <i class="fa-solid fa-user-group mb-2"></i>

                <p>{{myfriends | length}}</p>
            </div>
            </a>

        </div>

        <div class="text-center mt-3">
            <a class="text-decoration-none" href="/editarUser"><button class="btn btn-primary btn-edit-profile text-center">Editar perfil</button></a>
        </div>
    </div>
</main>
{% endif %}


{% endblock %}
